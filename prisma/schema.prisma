// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Article {
  id Int @id @default(autoincrement())
  title String
  content String
}


model Person {
  id Int @id @default(autoincrement())
  name String
  email String?
  phoneNumber String?
  bio String?
  studiesOrJob String?
  birthdate DateTime?
  memberships Membership[]
}

model Group {
  id Int @id @default(autoincrement())
  name String
  description String
  color String?
  ageRange String?
  sex String?
  memberships Membership[]
}

model Membership {
  id Int @id @default(autoincrement())
  personId Int
  groupId Int
  person Person @relation(fields: [personId], references: [id])
  group Group @relation(fields: [groupId], references: [id])
}

model Event {
  id Int @id @default(autoincrement())
  name String
  description String
  image String?
  startDateTime DateTime
  endDateTime DateTime?
  location String
}

model Administrator {
  auth0id String @id
  username String @unique
  email String
}
