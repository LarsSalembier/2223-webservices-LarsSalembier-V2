{
  "name": "chirohouthulst-backend",
  "author": "Lars Salembier",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "start:dev": "npx env-cmd -f .env.development nodemon src/index.ts",
    "start:prod": "npx env-cmd -f .env.production node src/index.ts",
    "lint": "eslint . --ext .ts --cache --fix",
    "test": "npx env-cmd -f .env.test jest --watchAll --verbose",
    "test:coverage": "npx env-cmd -f .env.test jest --coverage --verbose",
    "setup:dev": "npx env-cmd -f .env.development prisma generate && npx env-cmd -f .env.development prisma migrate dev",
    "setup:test": "npx env-cmd -f .env.test prisma generate && npx env-cmd -f .env.test prisma migrate deploy",
    "setup:prod": "npx env-cmd -f .env.production prisma generate && npx env-cmd -f .env.production prisma migrate deploy"
  },
  "devDependencies": {
    "@types/config": "^3.3.0",
    "@types/jest": "^29.5.3",
    "@types/koa": "^2.13.8",
    "@types/koa-bodyparser": "^4.3.10",
    "@types/koa__cors": "^4.0.0",
    "@types/koa__router": "^12.0.0",
    "@types/node": "^20.5.0",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "eslint": "^8.47.0",
    "eslint-config-airbnb-base-typescript-prettier": "^5.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.1",
    "prisma": "^5.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@faker-js/faker": "^8.0.2",
    "@koa/cors": "^4.0.0",
    "@koa/router": "^12.0.0",
    "@prisma/client": "^5.1.1",
    "config": "^3.3.9",
    "env-cmd": "^10.1.0",
    "koa": "^2.14.2",
    "koa-bodyparser": "^4.4.1",
    "winston": "^3.10.0"
  }
}
